{
    "name": "b-e-a-r/ssr-module",
    "description": "",
    "keywords": [
        "Skeleton",
        "PSR"
    ],
    "homepage": "https://github.com/koriym/Koriym.PhpSkeleton",
    "license": "MIT",
    "authors": [
        {
            "name": "Akihito Koriyama"
        }
    ],
    "require": {
        "php": "~5.6|~7.0",
        "bear/resource": "^1.4",
        "koriym/baracoa": "dev-master"
    },
    "require-dev": {
        "phpv8/v8js-stubs": "^1.2.0",
        "phpunit/phpunit": "~4.8 || ~5.0",
        "squizlabs/php_codesniffer": "~2.3",
        "phpmd/phpmd": "~2.3"
    },
    "autoload": {
        "psr-4": {
            "BEAR\\SsrModule\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BEAR\\SsrModule\\": [
                "tests/",
                "tests/Fake"
            ]
        }
    },
    "scripts": {
        "test": [
            "phpmd src text ./phpmd.xml",
            "phpcs src tests",
            "phpunit"
        ],
        "cs-fix": [
            "php-cs-fixer fix --config-file=./.php_cs",
            "phpcbf src"
        ],
        "build": [
            "rm -rf ./build; mkdir -p ./build/logs ./build/pdepend ./build/api",
            "pdepend --jdepend-xml=./build/logs/jdepend.xml --jdepend-chart=./build/pdepend/dependencies.svg --overview-pyramid=./build/pdepend/overview-pyramid.svg src",
            "phploc --log-csv ./build/logs/phploc.csv src",
            "phpcs --report=checkstyle --report-file=./build/logs/checkstyle.xml --standard=phpcs.xml src",
            "apigen generate -s src -d build/api",
            "@test"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}
